<Controls:MetroWindow
    xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls" x:Class="AdminPanel.Views.Streets.StreetsAdd"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AdminPanel.Views.Streets"
        mc:Ignorable="d"
        Title="Добавить новую улицу" Height="550" Width="800"
    MinHeight="450"
        MinWidth="800"
    MaxHeight="1080"
    MaxWidth="1920"
    >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Text="Введите название улицы" Grid.Row="0"  FontSize="25" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <TextBox x:Name="StreetName" Grid.Row="1" Margin="50" FontSize="25"/>
        <Button x:Name="NewStreet" Click="NewStreet_Click" Grid.Row="2" Content="Добавить" FontSize="25" Margin="25"/>
    </Grid>
</Controls:MetroWindow>
